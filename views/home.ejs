<!DOCTYPE html>
<html>
    <head>
        <title><%=title %></title>
        <link rel="stylesheet" href="css/home.css" type="text/css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://kit.fontawesome.com/8a4f70c80a.js" crossorigin="anonymous"></script>
        <link rel="icon" href="https://cdn.iconscout.com/icon/premium/png-256-thumb/todo-list-1540192-1305387.png" type="image">
    </head>
    <body>
        <div class="main-heading-container">
        <h1 class="main-heading">
            <%=title%>
        </h1>
        </div>
        <main>
        <form action="/addTask" method="POST" class="form-container">
            <h1 class="inner-headings"><span><i class="fas fa-pen-nib"></i></span> &nbsp;  New Task</h1>
            <input type="text" name="description" required class="input-fields">
            <select name="category" required class="input-fields" >
                <option value="" disabled selected>chose one category</option>
                <option value="personal">personal</option>
                <option value="work">work</option>
                <option value="school">school</option>
                <option value="cleaning">cleaning</option>
                <option value="others">others</option>
            </select>
            <input type="date" name="date" required class="input-fields">
            <button type="submit" id="add-btn">ADD TO LIST</button>
        </form>
        <div class="task-container">
            <h1 class="inner-headings"><span><i class="fas fa-tasks"></i></span> &nbsp; My task</h1>
            <ul>
                <%for(let i of my_todo_list){%>
                <li id="liitem-<%=i.id%>" class="tasks">
                    <input type="checkbox" class="checkbox" id="<%=i.id%>">
                <div class="description">
                    <p><%=i.description%></p>
                </div>
               
                <div class="date-container">
                    <p><%=i.date%></p>
                </div>
                <div class="category">
                    <p class="category-para"><%=i.category%></p>
                </div>
                 </li>
                 <%}%>
            </ul>
            <div class="delete-btn-container">
                <button type="submit" id="delete-btn">Delete</button>
            </div>
        </div>
        </main>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="js/home.js" type="text/javascript"></script>
    </body>
</html>