<!DOCTYPE html>
<html>
    <head>
        <title><%=title %></title>
        <link rel="stylesheet" href="css/home.css" type="text/css">
    </head>
   

    <body>
        <h1>
            <%=title%>hello
        </h1>
        <form action="/addTask" method="POST">
            <input type="text" name="description" required>
            <select name="category" required>
                <option value="" disabled selected>chose one category</option>
                <option value="personal">personal</option>
                <option value="work">work</option>
                <option value="school">school</option>
                <option value="cleaning">cleaning</option>
                <option value="others">others</option>
            </select>
            <input type="date" name="date" required>
            <button type="submit">add to LIST</button>
        </form>
        <div>
            <ul>
                <%for(let i of my_todo_list){%>
                <li id="liitem-<%=i.date%>" class="find" >
                    <input type="checkbox" class="checkbox" id="<%=i.date%>">
                <div>
                    <p><%=i.description%></p>
                </div>
                <div>
                    <p><%=i.category%></p>
                </div>
                <div>
                    <p><%=i.date%></p>
                </div>
                 </li>
                 <%}%>
            </ul>
            <div class="delete-btn-container">
                <button type="submit" id="delete-btn">delete</button>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="js/home.js" type="text/javascript"></script>
    </body>
</html>